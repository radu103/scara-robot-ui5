<mvc:View 
	controllerName="com.scara.robot.arm.controller.App" 
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<App id="appView">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<FlexBox class="sapUiTinyMargin" justifyContent="SpaceBetween" alignItems="Center" width="auto">
						<core:Fragment fragmentName="com.scara.robot.arm.view.fragments.BaseJoint" type="XML"/>
					</FlexBox>
					<Button text="Send New Values" press="onMovePress" type="Emphasized"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
