<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Panel id="baseJointPanel" headerText="Base Values" expandable="false" expanded="true" width="100%">
        <content>

            <FlexBox class="sapUiTinyMargin" justifyContent="SpaceBetween" alignItems="Center" width="auto">
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="IP" wrapping="false"/> 
                </VBox>
                <VBox>
                    <Input id="baseJointIP" value="192.168.1.4" placeholder="i.i.i.i" width="200px" textAlign="Right"/>
                </VBox>
            </FlexBox>

            <HBox class="sapUiTinyMargin" justifyContent="SpaceBetween" alignItems="Center" width="auto">
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="Steps" wrapping="true"/>
                </VBox>
                <VBox>
                    <StepInput id="baseJointSteps" value="0" displayValuePrecision="0" min="-600" max="600" step="1" width="200px"/>
                </VBox>
            </HBox>

            <HBox class="sapUiTinyMargin" justifyContent="SpaceBetween" alignItems="Center" width="auto">
                <VBox class="sapUiSmallMarginEnd">
                    <Label text="Angle" wrapping="true"/>
                </VBox>
                <VBox>
                    <StepInput id="baseJointAngle" value="0" displayValuePrecision="2" min="-180" max="180" step="10" width="200px"/>
                </VBox>
            </HBox>

        </content>
    </Panel>

</core:FragmentDefinition>